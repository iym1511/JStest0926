
public class BoardGame extends Game{
	
	private int peopleNum;
	
	public BoardGame() {
		this.peopleNum=0;
	}
	public BoardGame(int peopleNum) {
		this.peopleNum=peopleNum;
	}
	
	public int setBoardGame() {
		return this.peopleNum;
	}
	public void getBoardGame(int peopleNum) {
		this.peopleNum=peopleNum;
	}
	public void play(int peopleNum, String gameTitle) {
		System.out.println(peopleNum+"명이서"+gameTitle+"게임을 시작합니다");
	}

}
