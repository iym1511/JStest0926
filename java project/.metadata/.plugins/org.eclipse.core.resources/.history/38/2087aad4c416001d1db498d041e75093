package chap07_Object;

public class Student {
	// 필드값
	// private 는 클래스 안에서만 사용가능
	// public은 클래스 안에서 뿐만아니라 객체를 통해서도 접근가능
	// 값을 적어주지 않았을때 package까지 접근할수 있다.
	// public은 초록색원 아니면 파란색세모
	public String name;
	public int age;
	public int grade;

	// 매개변수를 갖지않는 생성자
	// 이름(홍길동) 나이(0) 학년(0)초기화
	Student() {
		this.name = "홍길동";
		this.age = 0;
		this.grade = 0;
	}

	// name값을 매개변수로 받아오는 생성자
	// 이름(name) 나이(0) 학년(0)초기화
	// 매개변수를 여러개 받아와서 사용할 수 있다.
	Student(String name, int age, int grade) {
		this.name = name;
		this.age = age;
		this.grade = grade;
	}

	// 메소드
	void printGrade() { // return이 없으면 반환값이 없다는 의미로 void라는 키워드를 사용(int,map,list)도가능
		System.out.println(grade);
	}

	// 실습, return을 통해서 나이값을 돌려주는 메소드
	int age1() {
		int a =age;
		return a;
	}
	
	// 매개변수를 통해서 학년을 수정하는 메소드
	void sujunggrade() {
		this.grade = grade;
		
	}
}
